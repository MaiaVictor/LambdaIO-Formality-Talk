teorema_giratorio(cor: Cor): desgirar(girar(cor)) == cor
  case cor:
  | amarelo  => proprio<_, amarelo>;
  | verde    => proprio<_, verde>;
  | azul     => proprio<_, azul>;
  | roxo     => proprio<_, roxo>;
  | vermelho => proprio<_, vermelho>;
  | laranja  => proprio<_, laranja>;
  : desgirar(girar(cor.self)) == cor.self;


