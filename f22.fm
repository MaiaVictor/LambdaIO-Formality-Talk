// ===================

amarelar(cor: Cor)<odirelo: cor != amarelo>: Sentido
  case cor:
  with odirelo : cor.self != amarelo = odirelo;
  | amarelo  => absurdo<>(odirelo(_));
  | verde    => anti_horario;
  | azul     => anti_horario;
  | roxo     => horario;
  | vermelho => horario;
  | laranja  => horario;

