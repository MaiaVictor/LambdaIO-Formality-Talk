// ===================

amarelar(cor: Cor)<naorelo: cor != amarelo>: Sentido
  case cor:
  with naorelo : cor.self != amarelo = naorelo;
  | amarelo  => absurdo<>(naorelo(_));
  | verde    => anti_horario;
  | azul     => anti_horario;
  | roxo     => horario;
  | vermelho => horario;
  | laranja  => horario;

